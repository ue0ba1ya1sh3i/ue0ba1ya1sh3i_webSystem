<style>
    header {
        top: 0;
        position: fixed;
        width: 100%;
        z-index: 100;
    }

    div#headerTitle {
        display: none;
    }

    div#headerLink {
        display: grid;
        background: var(--headerColor);
        padding: 10px;
    }

    div#headerLink a {
        font-size: 25px;
        margin: 0 25px 0 0;
        color: white;
    }

    @keyframes headerDisappear {
        0% {
            transform: translateY(0);
            opacity: 1;
        }

        100% {
            transform: translateY(-500px);
            opacity: 0;
        }
    }

    @keyframes headerAppear {
        0% {
            transform: translateY(-500px);
            opacity: 0;
        }

        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @media (max-width: 600px) {
        div.headerAnimationS {
            animation: headerAppear 0.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
        }

        div.headerAnimationE {
            animation: headerDisappear 0.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
        }

        div#headerTitle {
            display: block;
            padding: 10px;
            position: static;
            background-color: var(--headerColor);
        }

        div#headerLink a {
            margin: 0 0 10px 10px;
        }

        div#headerLink {
            background-color: var(--headerColor);
            border-bottom: 2px solid var(--subColor);
            padding: 0;
            border-top: 3px solid rgb(104, 104, 104);
        }

        a#headerLetter {
            display: flex;
            justify-content: center;
            font-size: 25px;
            color: white;
            padding: 0 0 10px 0;
        }

        /*hamburger*/
        header div#headerTitle label {
            position: fixed;
            top: 15px;
            left: 15px;
            display: flex;
            height: 35px;
            width: 35px;
            justify-content: center;
            align-items: center;
            border-radius: 3px;
            background-color: #e4e4e4;
        }

        header div#headerTitle label span,header div#headerTitle label span:before,header div#headerTitle label span:after {
            content: '';
            display: block;
            height: 2px;
            width: 18px;
            background-color: #363636;
            position: absolute;
        }

        header div#headerTitle label span:before {
            bottom: 6px;
        }

        header div#headerTitle label span:after {
            top: 6px;
        }
    }
</style>

<header>
    <div id="headerTitle">
        <a id="headerLetter" href="/">ue0ba1ya1sh3i</a>

        <input style="display: none;" onclick="hamburger(hamburgerButton.checked);" type="checkbox" id="hamburgerButton">
        <label for="hamburgerButton"><span></span></label>
    </div>

    <div id="headerLink">
        <a href="/">- Home</a>
        <a href="/app">- App</a>
        <a href="/settings">- Settings</a>
        <a href="/blog">- Blog</a>
    </div>
</header>

<script>
    const hamburgerButton = document.getElementById("hamburgerButton");
    const hamburgerLink = document.getElementById("headerLink");
    const hamburgerLetter = document.getElementById("headerLetter");

    function hamburger(check) {
        if(check) {
            hamburgerLink.style.display = "grid";
            hamburgerLink.classList.remove("headerAnimationE");
            hamburgerLink.classList.add("headerAnimationS");
        } else {
            hamburgerLink.classList.remove("headerAnimationS");
            hamburgerLink.classList.add("headerAnimationE");
        };
    };

    if(window.innerWidth < 600) {
        hamburgerLink.style.display = "none";
    } else {
        hamburgerLink.style.display = "flex";
    }

    window.addEventListener('resize', function() {
        if(window.innerWidth < 600) {
            hamburgerLink.style.display = "none";
        } else {
            hamburgerLink.style.display = "flex";
        }
    });
</script>